<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:hint="请输入用户名"
        android:id="@+id/yonghuming"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:hint="请输入邮箱"
        android:id="@+id/youxiang"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:hint="请输入手机号"
        android:id="@+id/shoujihao"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:hint="请输入密码"
        android:id="@+id/mima"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:hint="请输入密码"
        android:id="@+id/mimaagain"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
</LinearLayout>